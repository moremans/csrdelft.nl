{% extends 'base.html.twig' %}

{% block titel %}Documenten overzicht{% endblock %}

{% block breadcrumbs %}
	{{ csr_breadcrumbs({
		(url('default')): 'main',
		'': 'Documenten'
	}) }}
{% endblock %}

{% block content %}
	<div id="controls">
		{% if mag('P_DOCS_MOD') %}
			<a class="btn" href="{{ url('csrdelft_documenten_toevoegen') }}">{{ icon('toevoegen') }} Toevoegen</a>
		{% endif %}
	</div>

	{{ getMelding() }}

	<h1>Documenten</h1>

	<table id="documenten" class="table table-striped">
		<thead>
		<tr>
			<th scope="col">Document</th>
			<th scope="col">Grootte</th>
			<th scope="col">Type</th>
			<th scope="col">Toegevoegd</th>
			<th scope="col">Eigenaar</th>
		</tr>
		</thead>

		{% for categorie in categorien %}
			<tbody>
			<tr class="table-primary">
				<td colspan="5">
					<a href="{{ url('csrdelft_documenten_categorie', {id: categorie.id}) }}"
						 title="Alle documenten in {{ categorie.naam }}">
						{{ categorie.naam }}
					</a>
					{% if mag('P_DOCS_MOD') %}
						<a class="toevoegen float-right" href="{{ url('csrdelft_documenten_toevoegen') }}?catID={{ categorie.id }}"
							 title="Document toevoegen in categorie: {{ categorie.naam }}">
							{{ icon('toevoegen') }}
						</a>
					{% endif %}
				</td>
			</tr>
			{% for document in categorie.documenten.slice(0, 5) %}
				{{ include('documenten/documentregel.html.twig', {document: document}) }}
			{% else %}
				<tr>
					<td class="document" colspan="5">Geen documenten in deze categorie</td>
				</tr>
			{% endfor %}
			</tbody>
		{% else %}
			<tr>
				<td colspan="5">Geen categorieÃ«n in de database aanwezig.</td>
			</tr>
		{% endfor %}
		<tfoot>
		<tr>
			<th scope="col">Document</th>
			<th scope="col">Grootte</th>
			<th scope="col">Type</th>
			<th scope="col">Toegevoegd</th>
			<th scope="col">Eigenaar</th>
		</tr>
		</tfoot>
	</table>
{% endblock %}

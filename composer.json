{
	"name": "csr/csrdelft.nl",
	"description": "De stek van C.S.R. Delft",
	"authors": [
		{
			"name": "PubCie",
			"email": "pubcie@csrdelft.nl"
		}
	],
	"require": {
		"csrdelft/bb": "1.2.0",
		"easyrdf/easyrdf": "^0.9.1",
		"ext-PDO": "*",
		"ext-curl": "*",
		"ext-dom": "*",
		"ext-exif": "*",
		"ext-gd": "*",
		"ext-hash": "*",
		"ext-iconv": "*",
		"ext-intl": "*",
		"ext-json": "*",
		"ext-libxml": "*",
		"ext-mysqli": "*",
		"ext-openssl": "*",
		"ext-pdo_mysql": "*",
		"ext-simplexml": "*",
		"firebase/php-jwt": "^5.0",
		"globalcitizen/php-iban": "^2.6",
		"google/apiclient": "^2.0",
		"jacwright/restserver": "dev-master",
		"jakeasmith/http_build_url": "^1",
		"maknz/slack": "^1.7",
		"ml/json-ld": "^1.0",
		"php-di/invoker": "^2.0",
		"symfony/config": "^5.0",
		"symfony/dotenv": "^5.0",
		"symfony/flex": "^1.4",
		"symfony/framework-bundle": "^5.0",
		"symfony/http-foundation": "^5.0",
		"symfony/orm-pack": "^2.0",
		"symfony/routing": "^5.0",
		"symfony/security-csrf": "^5.0",
		"symfony/templating": "^5.0",
		"symfony/twig-bundle": "^5.0",
		"symfony/monolog-bundle": "^3.5",
		"symfony/serializer-pack": "^1.0",
		"symfony/cache": "^5.0",
		"beberlei/doctrineextensions": "^1.2",
		"symfony/var-dumper": "^5.0",
		"zumba/json-serializer": "^3.0",
		"sensio/framework-extra-bundle": "^5.5",
		"parsecsv/php-parsecsv": "^1.2",
		"symfony/mime": "^5.0",
		"symfony/security-bundle": "^5.0",
		"symfony/yaml": "^5.0",
		"sentry/sentry-symfony": "^3.5",
		"symfony/panther": "^0.7.1"
	},
	"config": {
		"platform": {
			"php": "7.3.14"
		}
	},
	"autoload": {
		"psr-4": {
			"CsrDelft\\": "lib/"
		},
		"files": ["lib/common/common.functions.php", "lib/common/common.view.functions.php"]
	},
	"include-path": ["lib/"],
	"require-dev": {
		"phpstan/phpstan": "*",
		"symfony/profiler-pack": "*",
		"doctrine/doctrine-fixtures-bundle": "^3.3",
		"symfony/maker-bundle": "^1.19",
		"fzaninotto/faker": "^1.9",
		"symfony/phpunit-bridge": "^5.1",
		"phpunit/phpunit": "8.3.0",
		"spatie/phpunit-snapshot-assertions": "^3.0",
		"symfony/browser-kit": "^5.0",
		"symfony/css-selector": "^5.0"
	},
	"scripts": {
		"serve": [
			"Composer\\Config::disableProcessTimeout",
			"symfony serve --document-root htdocs"
		],
		"migrate": "@console doctrine:migrations:migrate --allow-no-migration --no-interaction",
		"generator": "@php bin/dev/generate.php",
		"flushcache": "@console stek:cache:flush",
		"analyse": "@php vendor/phpstan/phpstan/phpstan --memory-limit=1000M analyse -l 4 -c phpstan.neon lib htdocs",
		"test": "@php vendor/phpunit/phpunit/phpunit --bootstrap ./phpunit.init.php tests",
		"console": "@php bin/console",
		"update-prod": [
			"git fetch",
			"touch .onderhoud",
			"git merge FETCH_HEAD",
			"@composer dump-env prod",
			"@migrate",
			"rm -r ./var/cache",
			"@flushcache",
			"rm .onderhoud",
			"@console cache:warmup"
		],
		"update-dev": [
			"@composer install",
			"@migrate",
			"yarn",
			"yarn dev"
		],
		"auto-scripts": {
			"cache:clear": "symfony-cmd",
			"assets:install %PUBLIC_DIR%": "symfony-cmd"
		}
	}
}

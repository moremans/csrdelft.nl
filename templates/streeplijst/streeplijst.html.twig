{% extends 'base.html.twig' %}
{% block titel %}Streeplijst{% endblock %}

{% block bodyClass %}zijbalk_verborgen{% endblock %}

{% block body %}
	<table class="table table-striped table-bordered">
		<thead>
		<tr>
			<th scope="col"></th>
			{% for inhoud in streeplijst.inhoud %}
				<th scope="col">{{ inhoud | trim }}</th>
			{% endfor %}
		</tr>
		</thead>
		<tbody>

		{% for lid in streeplijst.leden %}
			<tr>
				<th scope="row">{{ lid | trim }}</th>
				{% for inhoud in streeplijst.inhoud %}
					<td></td>
				{% endfor %}
			</tr>
		{% endfor %}

		</tbody>
	</table>
{% endblock %}
